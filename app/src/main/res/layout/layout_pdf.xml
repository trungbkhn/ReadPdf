<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_margin="2dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:layout_marginEnd="5dp"
            android:background="@color/gray_01">

            <com.github.barteksc.pdfviewer.PDFView
                android:id="@+id/pdf_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ProgressBar
                    android:id="@+id/pgb_progressBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/gray_02"></ProgressBar>
            </com.github.barteksc.pdfviewer.PDFView>


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_book_title"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/rl_1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Book Title"
            android:textColor="@color/black">

        </TextView>

        <TextView
            android:id="@+id/tv_description_pdf"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@+id/tv_book_title"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/rl_1"
            android:ellipsize="end"
            android:maxLines="4"
            android:padding="4dp"
            android:text="The description of the book"
            android:textColor="@color/gray_02"
            android:textSize="15sp">

        </TextView>

        <TextView
            android:id="@+id/tv_size_pdf"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/rl_1"
            android:maxLines="1"
            android:padding="5dp"
            android:paddingLeft="5dp"
            android:text="13MB"
            android:textColor="@color/black">

        </TextView>

        <TextView
            android:id="@+id/tv_date_pdf"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/tv_category_pdf"
            android:layout_toEndOf="@+id/tv_size_pdf"
            android:gravity="center"
            android:maxLines="1"
            android:padding="5dp"
            android:text="dd/MM/yyyy"
            android:textAlignment="center"
            android:textColor="@color/black">

        </TextView>

        <TextView
            android:id="@+id/tv_category_pdf"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:maxLines="1"
            android:padding="5dp"
            android:text="category"
            android:textColor="@color/black">

        </TextView>

        <ImageButton
            android:id="@+id/btn_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tv_book_title"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:src="@drawable/ic_more"></ImageButton>

    </RelativeLayout>

</androidx.cardview.widget.CardView>